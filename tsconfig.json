{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "typeRoots": [
      "./types"   
    ]
  },
  "compileOnSave": false
}
